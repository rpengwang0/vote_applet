.pPoster {
    display: block;
    width: 100%;
    height: 58vw;
    overflow: hidden;
    background: #fff;
}

.pPoster image {
    width: 100%;
    height: 100%;
    margin-bottom: 10px;
}

.pPoster .pAddPoster {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.dtSetupBtn {
    display: flex;
    width: 100vw;
    height: 58vw;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.dtSetupBtn text {
    color: #C2CDD9;
}

.pPoster .pShowPoster {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
}

.pPoster .pShowPoster .btnEdit {
    display: block;
    position: absolute;
    text-align: center;
    margin-top: calc(58vw - 60px);
    margin-left: calc(100% - 60px);
    width: 40px;
    height: 40px;
}

.pPoster .pShowPoster .btndelete {
    position: absolute;
    text-align: center;
    margin-top: calc(58vw - 60px);
    margin-left: calc(100% - 120px);
    width: 40px;
    height: 40px;
}

.pPoster .pAddPoster .pNormalImage {
    width: 40px;
    height: 40px;
}

.pTitle {
    height: 50px;
    width: 100%;
    position: relative;
    line-height: 30px;
    border-bottom: 1px solid #e7ecf2;
    border-top: 1px solid #e7ecf2;
    background: #fff;
}

.pTitle .pTitleLabel {
    display: inline-block;
    margin-top: 10px;
    float: left;
    margin-left: 15px;
    color: #98a4b4;
    width: 50px;
    height: 30px;
}

.pTitle .pTitleInput {
    display: block;
    width: calc(100%-80px);
    height: 30px;
    margin-right: 15px;
    margin-left: 80px;
    padding-top: 10px;
}

.pSheetView {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0px;
    bottom: 0px;
    z-index: 10;
}

.pSheetView .pSheetBg {
    position: fixed;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.0;
}

.pSheetView .pSheet {
    position: fixed;
    width: 100%;
    bottom: -170px;
}

.pSheetView .pSheet .pSheetTop {
    height: 40px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom: 1px solid #e7ecf2;
    background: #fff;
    width: calc(100% - 30px);
    margin-left: 15px;
    margin-right: 15px;
    text-align: center;
    line-height: 40px;
}

.pSheetView .pSheet .pSheetCenter {
    height: 40px;
    border-bottom: 1px solid #e7ecf2;
    background: #fff;
    width: calc(100% - 30px);
    margin-left: 15px;
    margin-right: 15px;
    text-align: center;
    line-height: 40px;
}

.pSheetView .pSheet .pSheetBottom {
    height: 40px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    background: #fff;
    width: calc(100% - 30px);
    margin-left: 15px;
    margin-right: 15px;
    text-align: center;
    line-height: 40px;
}

.pSheetView .pSheet .pSheetCancel {
    height: 40px;
    border-radius: 4px;
    background: #fff;
    width: calc(100% - 30px);
    margin-left: 15px;
    margin-right: 15px;
    text-align: center;
    line-height: 40px;
    margin-top: 10px;
    font-size: 15px;
    color: #233040;
}

.pSheetView .pSheet .joinPanel {
    width: calc(100% - 30px);
    margin-left: 15px;
    margin-right: 15px;
    height: auto;
    background: #fff;
    border-radius: 4px;
}

.pSheetView .pSheet .joinPanel .commonTip {
    width: 140px;
    margin-left: 10px;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    color: #233040;
}

.pSheetView .pSheet .joinPanel .commonInfo {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    font-size: 14px;
    color: #233040;
}

.pSheetView .pSheet .joinPanel .commonInfo .commonItem {
    text-align: center;
    width: 21%;
    border: 1px solid #e7ecf2;
    border-radius: 4px;
    margin-left: 20rpx;
    margin-bottom: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 14px;
    color: #233040;
}

.pSheetView .pSheet .joinPanel .commonInfo .commonOther {
    text-align: center;
    width: 45%;
    border: 1px solid #e7ecf2;
    padding-top: 5px;
    padding-bottom: 5px;
    border-radius: 4px;
    margin-left: 20rpx;
    margin-bottom: 10px;
    font-size: 14px;
    color: #233040;
}

.bottom {
    height: 60px;
    position: fixed;
    bottom: 0px;
    z-index: 5;
    background-color: #fff;
    width: 100%;
    display: flex;
    border-top: 1px solid #E7ECF2;
}

.postBtn {
    display: block;
    margin:0 5%;
    margin-top: 9px;
    width: 90vw;
    height: 42px;
    line-height: 42px;
    text-align: center;
    font-size: 30rpx;
    background-color: #0099e9;
    color: #fff;
    border-radius: 5px;
}
.postBtn2 {
    display: block;
    margin:0 0 0 5%;
    margin-top: 9px;
    width: 40vw;
    height: 42px;
    line-height: 42px;
    text-align: center;
    font-size: 30rpx;
    background-color: #C1C1C1;
    color: black;
    border-radius: 5px;
}

.postBtn:active {
    background-color: #bfe5f9;
}
.postBtn2:active {
    background-color: rgb(160, 165, 168);
}