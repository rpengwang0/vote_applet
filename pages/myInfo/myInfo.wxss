@import '/components/auth/authUser.wxss';
.header{
  display: flex;
  width: 100vw;
  flex-direction: row;
  align-items: center;
  background-image:url('https://tp.meilidongli.cn/banner/userbg.jpg');
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
}
.header-avatarUrl{
  width: 120rpx;
  height: 120rpx;
  margin: 90rpx 24rpx;
}
.you4{
  height: 34rpx;
  width: 18rpx;
  margin-right: 24rpx;
}
.mr{
  margin-right: 16rpx !important;
  width: 34rpx;
  height: 34rpx;
}
.header-avatarUrl image{
  border-radius: 100%;
  width: 100%;
  height: 100%;
}
.header-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 36rpx;
  color: white;
}
.info-name{
  font-size: 32rpx;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-left: -8rpx;
}
.info-name text{
  margin-right: 24rpx;
  font-size: 32rpx;
}
.info-phone{
  font-size: 32rpx;
  margin-top: 6rpx;
  margin-left: -14rpx;
}

.body-menu{
  display: flex;
  flex-direction: row;
  margin: 24rpx 24rpx 0 24rpx;
  justify-content: space-around;
  border: 1px solid #F5F5F5;
  padding: 24rpx 0;
  box-shadow: -5px 5px 5px #F5F5F5;
}
.beginLogin{
  background: #F5F5F5;
  opacity:0.5;
  padding: 12rpx 12rpx 12rpx 24rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  font-size: 24rpx;
}
.beginLogin:active{
  opacity:0.8;
}
.menu-x{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.iconMentImg{
  width: 58rpx;
  height: 58rpx;
}
.menuText{
  margin-top: 14rpx;
}
.functionMenu{
  display: flex;
  flex-direction: column;
  margin: 0 32rpx 24rpx 32rpx;
}
.fView-x{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #F5F5F5;
}
.fView-x:last-child{
  border-bottom: 0
}
.fView-x view{
  flex: 1;
  font-size: 32rpx;
}
.fView-x .iconImg {
  margin-right: 0;
}
.outView{
  width: 45vw;
  font-size: 28rpx;
  margin: auto;
  text-align: center;
  border: 1px solid rgb(184, 58, 58);
  color: red;
  border-radius: 50rpx;
  padding: 10rpx 0;
}
.qian{
  max-width: 34rpx;
  height: 34rpx;
  border-radius: 34rpx;
  margin-right: 12rpx;
}
.i1{
  background:rgba(62,206,103,1);
}
.i2{
  background: #ccab69;
}
.i3{
  background: rgba(122,228,240,1);
}
.i4{
  background: rgba(255,144,0,1);
}
.i5{
  background: rgba(251,219,44,1);
}